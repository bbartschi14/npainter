{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": ".", // this must be specified if "paths" is specified.
    "paths": {
      "shared": ["../shared"] // this mapping is relative to "baseUrl"
    }
  },
  "include": [
    "./src/",
  ],
}

